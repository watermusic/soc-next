<section aria-labelledby="recent-hires-title">
    <div class="rounded-lg bg-white overflow-hidden shadow">
        <div class="p-6">
            <h2 class="text-base font-medium text-gray-900" id="recent-hires-title">Bundesliga News</h2>
            <div class="flow-root mt-6">
                <ul role="list" class="divide-y divide-gray-200">
                    {% for item in news %}
                        <li class="py-4">
                            <div class="flex space-x-3">
                                {% if item.image is not null %}
                                    <img class="h-6 w-6 rounded-full" src="{{ item.image }}" alt="{{ item.title }}">
                                {% endif %}
                                <div class="flex-1 space-y-1">
                                    <div class="flex items-center justify-between">
                                        <h3 class="text-sm font-medium">{{ item.title }}</h3>
                                    </div>
                                    <p class="mt-0.5 text-sm text-gray-500">{{ item.createdAt|ago(null, 'de') }}</p>
                                    <p class="mt-0.2 text-sm text-gray-700">{{ item.description }}</p>
                                    <a href="{{ item.link }}" target="_blank" class="mt-0.2 text-sm text-gray-700 hover:text-indigo-500">mehr...</a>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</section>
