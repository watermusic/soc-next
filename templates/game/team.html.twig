{% extends 'layout.html.twig' %}

{% block title %}Mein Team{% endblock %}

{% block sub_title %}Mein Team{% endblock %}

{% block main %}
<div class="grid grid-cols-1 gap-4 items-start py-6">
    <ul role="list" class="grid grid-cols-3 gap-x-4 gap-y-8 sm:grid-cols-4 sm:gap-x-6 md:grid-cols-5 lg:grid-cols-7 xl:grid-cols-9 2xl:grid-cols-9 xl:gap-x-8">

        {% for player in players %}
{#
    bg-gray-600 bg-gray-500 bg-gray-400 bg-gray-300 text-gray-300 text-gray-200
    bg-blue-600 bg-blue-500 bg-blue-400 bg-blue-300 text-blue-300 text-blue-200
    bg-indigo-600 bg-indigo-500 bg-indigo-400 bg-indigo-300 text-indigo-300 text-indigo-200
    bg-yellow-600 bg-yellow-500 bg-yellow-400 bg-yellow-300 text-yellow-200
    bg-purple-600 bg-purple-500 bg-purple-400 bg-purple-300 text-purple-200
    bg-purple-600 bg-purple-500 bg-purple-400 bg-purple-300 text-purple-200
    bg-green-600 bg-green-500 bg-green-400 bg-green-300 text-green-200
    bg-pink-600 bg-pink-500 bg-pink-400 bg-pink-300 text-pink-200
    bg-slate-600 bg-slate-500 bg-slate-400 bg-slate-300 text-slate-200
    bg-teal-600 bg-teal-500 bg-teal-400 bg-teal-300 text-teal-200
    bg-violet-600 bg-violet-500 bg-violet-400 bg-violet-300 text-violet-200
    bg-fuchsia-600 bg-fuchsia-500 bg-fuchsia-400 bg-fuchsia-300 text-fuchsia-200
    bg-rose-600 bg-rose-500 bg-rose-400 bg-rose-300 text-rose-200
    bg-emerald-600 bg-emerald-500 bg-emerald-400 bg-emerald-300 text-emerald-200
#}
            {% set bgColor = 'bg-' ~ player.position.colorName ~ '-500' %}
            {% set textColor = 'text-' ~ player.position.colorName ~ '-200' %}
        <li class="relative player">
            <div class="relative group block w-full h-48 sm:h-56 lg:h-56 xl:h-48 rounded-lg {{ bgColor }} focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-offset-gray-100 focus-within:ring-indigo-500 overflow-hidden">
                <div class="w-full h-full opacity-25" style="background-image: url('{{ player.team.publicThumbUrl }}'); opacity: 0.1"></div>
                <img src="{{ player.publicThumbUrl }}" alt="{{ player.name }}" class="absolute bottom-0 w-full h-auto pointer-events-none group-hover:opacity-75">
                <div class="flex flex-col m-4 absolute top-0">
                    <p class="block text-base font-medium text-white truncate pointer-events-none">{{ player.name }}</p>

                    {% set signingFee = player.signingFee / 100000000 %}

                    <p class="block text-sm font-light {{ textColor }} pointer-events-none">â‚¬{{ signingFee }}M</p>
                </div>
                <button type="button" class="absolute inset-0 focus:outline-none">
                    <span class="sr-only">View details for IMG_4985.HEIC</span>
                </button>

            </div>
        </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
